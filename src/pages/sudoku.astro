---
import BaseLayout from '@layouts/base-layout.astro';
import { HeadHtml, BodyHtml } from '@printezisn/games-sudoku/templates';

const title = 'Decisive Sudoku | Find easy to hard sudoku puzzles';
const description =
  'Find and solve easy to hard sudoku puzzles with a variety of tools in your arsenal. You can use multiple colors for marking and undo actions.';
---

<BaseLayout
  title={title}
  description={description}
  image="/games/sudoku/logo.png"
  path="/sudoku/"
  favicon="/games/sudoku/favicon.png"
  themeColor="#1a1a1a"
  breadcrumbList={[
    {
      name: 'Portfolio',
      url: '/',
    },
    {
      name: 'Decisive Sudoku',
      url: '/sudoku/',
    },
  ]}
>
  <Fragment slot="scripts">
    <Fragment set:html={HeadHtml} />
    <script src="@scripts/games/sudoku/main.ts"></script>
  </Fragment>
  <Fragment set:html={BodyHtml} />
</BaseLayout>
