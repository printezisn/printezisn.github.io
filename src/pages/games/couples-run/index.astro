---
import BaseLayout from '../../../layouts/base-layout.astro';

const title = 'Couples Run | Team up for high scores!';
const description =
  "Join forces with your partner in the ultimate couples' platformer game! Collect drinks, dodge enemies, and tackle treacherous pits. Are you ready? Play now!";
---

<BaseLayout
  title={title}
  description={description}
  image="/games/couples-run/logo.png"
  path="/games/couples-run/"
  favicon="/games/couples-run/favicon.png"
  themeColor="#000000"
>
  <Fragment slot="scripts">
    <script src="../../../scripts/games/couples-run/main.ts"></script>
  </Fragment>
</BaseLayout>
